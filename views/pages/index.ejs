<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <script>
      const fetchBlockStats = async () => {
        try {
          const response = await fetch("/bsv/v1/block/latest");
          const { height, hash } = await response.json();
          console.log({ height, hash });
          document.querySelector("#latest-block").innerHTML = height;
        } catch (error) {
          console.error(error);
        }
      };
      document.addEventListener("DOMContentLoaded", async () => {
        await fetchBlockStats();
      });
    </script>
  </head>
