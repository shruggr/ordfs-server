{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "outDir": "dist",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "allowJs": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
    },
    "compileOnSave": true,
    "include": [
      "src"
    ]
  }
  